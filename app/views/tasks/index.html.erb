<h1>Tasks List</h1>

<%= link_to 'Add new task', new_task_path, class: 'badge badge-primary' %>
<hr />
<% @tasks.each do |task| %>
  <%= link_to "#{task.description}", task_path(task), class: 'badge badge-info' %>
  <%= button_to 'Delete', task, :method => :delete, class: 'btn btn-danger btn-sm' %>
  <br />
<% end %>