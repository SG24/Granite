<h1>Log In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :login do |f| %>
    
      <div>
        <%= f.label :email %>
        <%= f.text_field :email, autofocus: true ,class:"form-control"%>
      </div>
    
      <div>
        <%= f.label :password %>
        <%= f.password_field :password,class: 'form-control' %>
      </div>
    
      <br>
    
      <div>
        <%= f.submit "Log In",class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>